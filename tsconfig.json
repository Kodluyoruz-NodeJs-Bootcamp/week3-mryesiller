{
  "compilerOptions": {
    "target": "es6",                          
    "module": "commonjs",                         
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",            
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,    
    "allowSyntheticDefaultImports": true,    
    "moduleResolution": "node",
    "sourceMap": true,    
    "baseUrl": ".",      
    "paths": {
      "*": [
          "node_modules/*",
          "src/types/*"
      ]
  }
  },
  "include": [
    "src/**/*"
  ]
  
}
